<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    style="@style/style_match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/string_result_fragment_highscore_dialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_result_fragment_avatar_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_boy_1"/>

        <ImageView
            android:id="@+id/id_result_fragment_avatar_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_boy_2"/>

        <ImageView
            android:id="@+id/id_result_fragment_avatar_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_boy_3"/>

        <ImageView
            android:id="@+id/id_result_fragment_avatar_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_boy_4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_result_fragment_avatar_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_girl_1"/>

        <ImageView
            android:id="@+id/id_result_fragment_avatar_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_girl_2"/>

        <ImageView
            android:id="@+id/id_result_fragment_avatar_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_girl_3"/>

        <ImageView
            android:id="@+id/id_result_fragment_avatar_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/drawable_girl_4"/>

    </LinearLayout>

</LinearLayout>