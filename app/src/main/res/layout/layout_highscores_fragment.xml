<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_parent">

    <ScrollView
        style="@style/style_match_parent"
        android:layout_below="@+id/id_highscores_fragment_title_linear_layout"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/id_highscores_fragment_linear_layout"
            style="@style/style_match_parent"
            android:orientation="vertical"
            android:gravity="center" />

    </ScrollView>

    <TextView
        android:id="@+id/id_highscore_fragment_no_data_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_highscore_fragment_no_data"
        android:gravity="center_horizontal"
        android:textColor="@color/color_brown"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/id_highscores_fragment_title_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/id_highscores_fragment_section_title_text_view"
            style="@style/style_match_parent"
            android:gravity="center"
            android:textColor="@color/color_brown"
            android:textSize="30sp"
            android:text="@string/string_highscore_fragment_name"/>

    </LinearLayout>
</RelativeLayout>