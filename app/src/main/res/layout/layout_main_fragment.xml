<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_main_activity_fragment_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_main_activity_title"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/id_main_activity_fragment_subtitle_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/id_main_activity_fragment_title_text_view"
        android:text="@string/string_main_activity_subtitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/id_main_fragment_start_image_view"
            style="@style/style_main_menu_image_view"
            android:src="@drawable/drawable_start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/id_main_fragment_statistic_image_view"
                style="@style/style_main_menu_image_view_1"
                android:src="@drawable/drawable_statistics"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/id_main_fragment_extra_image_view"
                style="@style/style_main_menu_image_view_1"
                android:layout_marginLeft="25dp"
                android:src="@drawable/drawable_extras"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/id_main_fragment_help_image_view"
            style="@style/style_main_menu_image_view_2"
            android:src="@drawable/drawable_setting"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/id_main_fragment_exit_image_view"
            android:layout_toRightOf="@+id/id_main_fragment_help_image_view"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/drawable_coin"/>

            <TextView
                android:id="@+id/id_main_fragment_coin_text_view"
                style="@style/style_wrap_content"
                android:textSize="20sp"
                android:text=" x 10"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/id_main_fragment_exit_image_view"
            style="@style/style_main_menu_image_view_2"
            android:src="@drawable/drawable_exit"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>