<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/id_store_activity_frame_layout"
    style="@style/style_match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_blue_grey_1">

        <TextView
            android:id="@+id/id_store_title_text_view"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:textColor="@color/color_white"
            android:padding="10dp"
            android:text="Silahkan pilih kategori item :"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center|end"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_store_coin_text_view"
                style="@style/style_wrap_content"
                android:padding="10dp"
                android:textColor="@color/color_white" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/drawable_coin"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/id_store_frame_layout"
        style="@style/style_match_parent"/>

</LinearLayout>
