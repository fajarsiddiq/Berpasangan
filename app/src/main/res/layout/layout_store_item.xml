<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    android:layout_margin="10dp">

    <FrameLayout
        android:id="@+id/id_store_item_linear_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_parent"
        android:background="@color/color_grey_2">

        <TextView
            android:id="@+id/id_store_item_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_primary_dark"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="Menara Eiffel"
            android:gravity="center|left"/>

        <ImageView
            android:id="@+id/id_store_item_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="bottom|right"
            android:scaleType="fitCenter"
            android:src="@drawable/eiffel"/>

        <ImageView
            android:id="@+id/id_store_item_lock"
            style="@style/style_wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/drawable_locked"/>

    </FrameLayout>
</android.support.v7.widget.CardView>
